{
  "manifest_version": 3,
  "name": "AI Flashcard Generator",
  "version": "1.0",
  "description": "Generate flashcards instantly using Gemini AI.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "flashcard-gen@example.com"
    }
  }
}